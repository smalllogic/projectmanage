<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
   <%= form.label :project_id %>
    <%= form.select :project_id, Project.all.map{ |c| [c.title, c.id] }, {}, :class => "form-control" %>
  </div>


  <div>
    <%= form.label :task_title, style: "display: block" %>
    <%= form.text_field :task_title %>
  </div>

  <div>
    <%= form.label :task_description, style: "display: block" %>
    <%= form.text_area :task_description %>
  </div>

  <div class="form-group">
   <%= form.label :thedeadline_id %>
    <%= form.select :thedeadline_id, Thedeadline.all.map{ |c| [c.deadlinetime, c.id] }, {}, :class => "form-control" %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
